<style>

    .stacks {
        position: relative; /* adicionado */
        margin-top: 20px;
        margin-bottom: 20px;
        background-color: gainsboro;
        color: white;
        padding: 10px;
        cursor: pointer;
        transition: background-color 0.5s ease-in-out;
        width: 75%;
    }

        .stacks:hover {
            background-color: cornflowerblue;
        }

    #stacks-list {
        display: none;
        position: initial;
        /*bottom: calc(100% + 10px);*/
        width: 100%;
        /*transform: translateY(-20%);*/
    }

        #stacks-list.show {
            display: block;
        }
</style>

<script>

    const subtitle = "Conectando pessoas a oportunidades...";
    let index = 0;

    function typeSubtitle() {
        const text = subtitle.slice(0, ++index);
        document.getElementById("subtitle").textContent = text;
        if (text.length === subtitle.length) {
            clearInterval(typingInterval);
        }
    }

    const typingInterval = setInterval(typeSubtitle, 100);


    function showStacks() {
        document.getElementById("stacks-list").classList.add("show");
    }

    function hideStacks() {
        document.getElementById("stacks-list").classList.remove("show");
    }
</script>